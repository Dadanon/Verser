<Window x:Class="Verser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verser"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="300" MouseRightButtonDown="Window_MouseRightButtonDown"
        x:Name="mainW" MinHeight="800" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonDelete" Grid.Column="1" Grid.Row="1" Content="Delete" Margin="10" Click="ChangeCursor"/>
        <Button x:Name="ButtonNew" Grid.Column="2" Grid.Row="1" Content="New" Click="ButtonNew_Click" Margin="10"/>
        <StackPanel x:Name="TitleView" Grid.Row="0" CanVerticallyScroll="True" Grid.ColumnSpan="3">
            
        </StackPanel>
    </Grid>
</Window>
