<Window x:Class="Verser.PoemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verser"
        mc:Ignorable="d"
        Title="PoemWindow" Height="800" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TitleRow" Grid.Row="0"/>
        <TextBlock x:Name="TextRow" Grid.Row="1">
            
        </TextBlock>
        <Button x:Name="BackButton" HorizontalAlignment="Center" Content="Back to home" Grid.Row="2" Margin="10" Click="BackButton_Click"/>
    </Grid>
</Window>
